{
  "manifest_version": 3,
  "name": "Sticky Notes",
  "description": "A Chrome extension to create and save sticky notes.",
  "version": "1.0",
  "action": {
    "default_popup": "stickyNotes/stickyNotes.html",
    "default_icon": "images/hello_extensions.png"
  },
  "permissions": ["activeTab", "storage", "tabs", "scripting"],
  "content_scripts": [
    {
      "js": [
        "scripts/content_script.js",
        "scripts/draggable.js",
        "scripts/content_popup.js",
        "scripts/content_eventHandling.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "lib/*", "styles/*"],
      "matches": ["*://*/*"]
    }
  ]
}
